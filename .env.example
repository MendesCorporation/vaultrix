# Database
DB_USER=vaultrix
DB_PASSWORD=your_secure_password_here
DB_NAME=vaultrix
DB_PORT=5432
# DATABASE_URL é construída automaticamente pelo docker-compose
# Só preencha se for rodar em desenvolvimento local (fora do Docker)
# DATABASE_URL="postgresql://vaultrix:your_secure_password_here@localhost:5432/vaultrix"

# Auth - Gere com: openssl rand -base64 32
AUTH_SECRET="your-secret-key-here-generate-with-openssl"
# URL pública da aplicação (use IP da máquina, domínio ou DNS)
# Exemplos: http://192.168.1.100:3000
AUTH_URL="http://your-server-ip:3000"

# Encryption - Gere com: openssl rand -hex 32
ENCRYPTION_PEPPER="your-pepper-here-generate-with-openssl"

# Session (em segundos - 900 = 15 minutos)
SESSION_MAX_AGE=900

# App
NEXT_PUBLIC_APP_NAME="Vaultrix"
NODE_ENV=development
TZ=America/Sao_Paulo
APP_PORT=3000

